        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.StartTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.EndTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.EndTime)
        </dd>
