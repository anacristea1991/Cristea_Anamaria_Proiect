        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MedicalStaff.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MedicalStaff.FirstName)
        </dd>
        <dt class="col-sm-2">
