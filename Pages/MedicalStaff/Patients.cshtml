@page
@model Cristea_Anamaria_Proiect.Pages.MedicalStaff.PatientsModel
@{
    ViewData["Title"] = "Assigned Doctor";
}
<h1>Patients list</h1>
@if (Model.Patients.Any())
{
    var doctor = Model.Patients[0].AssignedDoctor;
    <h2>Assigned doctor @doctor.FirstName @doctor.LastName</h2>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].CNP)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Gender)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].Street)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Patients[0].StreetNumber)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Patients)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNP)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StreetNumber)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        <p>No patients</p>
    </div>
}
<div>
    <a asp-page="./Index">Back to List</a>
</div>