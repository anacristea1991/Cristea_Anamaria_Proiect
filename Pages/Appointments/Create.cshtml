    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Appointment.Patient" class="control-label"></label>
                <select asp-for="Appointment.PatientId" class="form-control" asp-items="ViewBag.Patients"></select>
