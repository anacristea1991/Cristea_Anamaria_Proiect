@page
@model Cristea_Anamaria_Proiect.Pages.Appointments.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Patient)
        </dt>
        <dd class="col-sm-10">
            @(Model.Appointment.Patient.FirstName+" "+ Model.Appointment.Patient.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.MedicalStaff)
        </dt>
        <dd class="col-sm-10">
            @(Model.Appointment.MedicalStaff.FirstName+" "+ Model.Appointment.MedicalStaff.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Appointment.Details)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Appointment.Details)
        </dd>
    </dl>
